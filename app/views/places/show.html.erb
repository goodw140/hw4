<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<div class="row">
  <% for entry in @entries %>
    <div class="col-lg-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
      
    </div>
  <% end %>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>"><button type="button" class="btn btn-primary">New Entry</button></a>
</p>

<p>
  <a href="/places"><button type="button" class="btn btn-primary">Back to All Places</button></a>
</p>